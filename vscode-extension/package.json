{
  "name": "groovy",
  "displayName": "Groovy",
  "description": "Language support for Groovy",
  "version": "0.0.0",
  "publisher": "publisher",
  "homepage": "https://github.com/prominic/groovy-language-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/prominic/groovy-language-server.git"
  },
  "bugs": {
    "url": "https://github.com/prominic/groovy-language-server/issues"
  },
  "license": "Apache-2.0",
  "private": true,
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "Groovy",
    "Grails"
  ],
  "main": "extension",
  "engines": {
    "vscode": "^1.92.0"
  },
  "devDependencies": {
    "@types/node": "^20.16.3",
    "@types/vscode": "^1.92.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "@vscode/vsce": "^3.0.0",
    "vscode-jsonrpc": "^8.2.1",
    "vscode-languageclient": "^9.0.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "activationEvents": [
    "onLanguage:groovy"
  ],
  "contributes": {
    "languages": [
      {
        "id": "groovy",
        "extensions": [
          ".groovy"
        ],
        "aliases": [
          "Groovy"
        ]
      }
    ],
    "commands": [
      {
        "command": "groovy.restartServer",
        "title": "Restart Groovy language server",
        "category": "Groovy"
      }
    ],
    "configuration": {
      "type": "object",
      "description": "Groovy configuration",
      "properties": {
        "groovy.java.home": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Specifies the folder path to the JDK. Use this setting if the extension cannot find Java automatically."
        },
        "groovy.classpath": {
          "type": "array",
          "default": null,
          "description": "Specifies additional entries to add to the classpath. May contain both folders and individual .jar files.",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
