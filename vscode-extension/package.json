{
  "name": "groovy",
  "displayName": "Groovy",
  "description": "Language support for Groovy",
  "version": "0.0.0",
  "publisher": "publisher",
  "homepage": "https://github.com/prominic/groovy-language-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/prominic/groovy-language-server.git"
  },
  "bugs": {
    "url": "https://github.com/prominic/groovy-language-server/issues"
  },
  "license": "Apache-2.0",
  "private": true,
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "Groovy",
    "Grails"
  ],
  "main": "./extension.js",
  "engines": {
    "vscode": "^1.36.0"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^10.14.12",
    "@types/vscode": "^1.36.0",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "vsce": "^1.66.0",
    "vscode-jsonrpc": "^4.0.0",
    "vscode-languageclient": "^5.2.1",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6"
  },
  "activationEvents": [
    "onLanguage:groovy",
    "onCommand:groovy.restartServer"
  ],
  "contributes": {
    "languages": [
      {
        "id": "groovy",
        "extensions": [
          ".groovy"
        ],
        "aliases": [
          "Groovy"
        ]
      }
    ],
    "commands": [
      {
        "command": "groovy.restartServer",
        "title": "Restart Groovy language server",
        "category": "Groovy"
      }
    ],
    "configuration": {
      "type": "object",
      "description": "Groovy configuration",
      "properties": {
        "groovy.java.home": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Specifies the folder path to the JDK. Use this setting if the extension cannot find Java automatically."
        },
        "groovy.additional.libraries": {
          "type": "string",
          "default": null,
          "description": "Specifies paths to additional libraries used to resolve classes. (multiple paths separated by semicolon)"
        }
      }
    }
  }
}
